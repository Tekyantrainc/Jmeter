                                cd /var/lib/jenkins/workspace/apache-jmeter-5.6/bin
                                sudo sh update_variables.sh
                                sleep 10
                                sudo sh jmeter.sh -n -t demotest.jmx -l results.jtl
                            '''
                        }
                    }
                }
            }
        }
    }
